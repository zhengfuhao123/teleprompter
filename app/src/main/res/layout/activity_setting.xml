<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/setting_theme"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_normal_btn"
        android:paddingHorizontal="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="主题设置"
            android:textColor="@color/textNormal" />

        <TextView
            android:id="@+id/setting_theme_mode_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浅色模式"
            android:textColor="@color/subText"/>

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/subText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_version"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_normal_btn"
        android:paddingHorizontal="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="版本"
            android:textColor="@color/textNormal" />
        
        <ProgressBar
            android:id="@+id/setting_version_progress"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/setting_version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0.2"
            android:visibility="gone"
            android:textColor="@color/subText"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/setting_about"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_normal_btn"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"
            android:textColor="@color/textNormal" />

    </LinearLayout>

</LinearLayout>